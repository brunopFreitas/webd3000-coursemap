@page
@model w0448225CourseMap.Pages_Semester.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.AcademicYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.AcademicYear.Title)
        </dd>
        <dt class="col-sm-2">
            Course Offerings: 
        </dt>
        <dd class="col-sm-10">
                @foreach (var item in @Model.Semester.CourseOfferings
                .OrderBy(co => co.DiplomaYearSection.DiplomaYear.Diploma.Title)
                .ThenBy(co => co.DiplomaYearSection.DiplomaYear.Title)
                .ThenBy(co => co.Course.CourseCode))
                {
                    <ul class="border border-primary rounded">
                        <li>
                            Diploma: @item.DiplomaYearSection.DiplomaYear.Diploma.Title - @item.DiplomaYearSection.DiplomaYear.Title
                        </li>
                        <li>
                            Course: @item.Course.CourseCode - @item.Course.Title
                        </li>
                        <li>
                            Instructor name: @item.Instructor.FullName
                        </li>
                        <li>
                            Is direct elective: @item.IsDirectedElective
                        </li>
                    </ul>
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Semester?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
